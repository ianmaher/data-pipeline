{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier"
  ],
  "plugins": ["import", "prettier"],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": false,
    "node": false,
    "amd": true
  },
  "rules": {

    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "printWidth": 120
      }
    ],

    // allow absolute imports to come after relative imports
    "import/first": 0,

    // don't force extensions to be added (at least until a setting is provided to ignorePackages)
    "import/extensions": 0,

    "no-underscore-dangle": 0,
    // We allow console logs but please be aware that some properties like console.table are not universally supported (e.g. IE11)
    "no-console": 0,
    // We want to allow devDepencies in various config files and the test spec files.
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/webpack/*.js", "**/karma/*.js", "**/*.spec.js"]
      }
    ],

    // We do not require jsdoc
    "require-jsdoc": 0,
    "valid-jsdoc": 0,

    // At least allow properties of function arguments to be set:
    "no-param-reassign": [2, { "props": false }],

    // allow Windows developers with recommended Git settings
    "linebreak-style":0
  },
  "settings": {
    "import/ignore": ["node_modules", "lambda", ".(scss)$"],
    "import/resolver": {
      "webpack": {
        "config": "webpack/dev.conf.js"
      }
    }
  },
  "globals": {
    "__PROD__": true,
    "__API_BASE__": true
  }
}
